menu "DENOISER APP menu"

    comment "Options"

    choice APP_MODE
        prompt "Application Mode"
        default DEMO

        config DEMO
            bool "Demo Mode"

        config DENOISE_WAV
            bool "DenoiseWav"

        config DSP_WAV
            bool "DSPWav"

        config NN_TEST
            bool "NN Test"

    endchoice

    choice QUANT_TYPE
        prompt "Quantization Type"
        default FP16MIXED

        config FP16MIXED
            bool "Mixed FP16-INT8"
            select CNN_SQ8
            select CNN_FP16

        config FP16
            bool "FP16"
            select CNN_FP16

        if DSP_WAV || NN_TEST
        config 8
            bool "int8"
            select CNN_SQ8
        endif

        if DSP_WAV || NN_TEST
        config NE16
            bool "NE16"
            select CNN_SQ8
            select CNN_NE16
        endif

    endchoice

    config CHECKSUM
        bool "Enable Checksum for CI purpose"
        default n

    config GRU
        bool "Use GRU model based (otherwise: LSTM)"
        default y

    config SILENT
        bool "Silence Mode"
        default y

    config VOLTAGE
        int "GAP9 Voltage" 
        default 800
        range 650 800

endmenu
source "$(GAP_SDK_HOME)/utils/kconfig/Kconfig"
